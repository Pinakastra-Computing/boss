{
  "parser": "babel-eslint",
  "extends": "standard",
  "plugins": [
    "standard",
    "class-property"
  ],
  "rules": {
    "semi": [2, "always"],
    "quotes": [2, "single", "avoid-escape"],
    "one-var": [0, "always"],
    "space-before-function-paren": [1, {
      "anonymous": "always",
      "named": "never"
    }],
    "arrow-parens": [2, "as-needed"],
    "no-return-assign": [0, "except-parens"]
  },
  "globals": {
    "angular": true,
    "_": true,
    "Raven": true,
    "ga": true,
    "inject": true,
    "$": true,
    "cp": true,
    "zxcvbn": true
  },
  "env": {
    "browser": true,
    "jasmine": true
  }
}
